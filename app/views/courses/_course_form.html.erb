<div class="row">
  <div class="form-group">
    <label class="col-lg-3 control-label">Category</label>
    <div class="col-lg-5">
      <select class="form-control selectpicker" id="category_select" data-live-search="true" title="Choose category...">
        <% course_category =  @course.subject.category.id.to_s rescue '' %>
        <% @categories_subjects_hash.each do |category| %>
          <option value="<%= category.last['id'] %>" <%= "selected='selected'" if category.last['id'].eql?(course_category) %> >
            <%=category.last['name']%>
          </option>
        <% end %>
      </select>
    </div>
  </div>
</div>
<br />
<div class="row">
  <div class="form-group">
    <label class="col-lg-3 control-label">Subject</label>
    <div class="col-lg-5">
      <input type="hidden" id="categories_subjects_hash" value="<%= @categories_subjects_hash.to_json %>" />
      <input type="hidden" id="course_subject" value="<%= @course.subject.to_json %>" />
      <select class="form-control selectpicker" id="subject_select" data-live-search="true" name="course[subject]" title="Choose subject...">
      </select>
    </div>
  </div>
</div>
<br />
<div class="row">
  <div class="form-group">
    <%= f.label :name, "Name", class: "col-lg-3 control-label" %>
    <div class="col-lg-5">
      <%= f.text_field :name, autofocus: true, autocomplete: "off", class: "form-control", required: true %>
    </div>
  </div>
</div>
<br />
<div class="row">
  <div class="form-group">
    <%= f.label :description, "Description", class: "col-lg-3 control-label" %>
    <div class="col-lg-5">
      <%= f.text_area :description, autofocus: true, autocomplete: "off", rows: 4, class: "form-control" %>
    </div>
  </div>
</div>
<br />
<div class="row">
  <div class="form-group">
    <%= f.label :start_time, "Start time", class: "col-lg-3 control-label" %>
    <div class="col-lg-5" class= "form-control">
        <div class="form-group">
          <div class='input-group date' id='datetimepicker_start'>
            <% start_time_represent = @course.start_time.strftime("%d/%m/%Y %H:%M") rescue '' %>
              <%= f.text_field :start_time, value: start_time_represent, autocomplete: "off", class: "form-control" %>
              <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
              </span>
          </div>
        </div>

    </div>
  </div>
</div>
<div class="row">
  <div class="form-group">
    <%= f.label :end_time, "End time", class: "col-lg-3 control-label" %>
    <div class="col-lg-5" class= "form-control">
        <div class="form-group">
          <div class='input-group date' id='datetimepicker_end'>
            <% end_time_represent = @course.end_time.strftime("%d/%m/%Y %H:%M") rescue '' %>
              <%= f.text_field :end_time, value: end_time_represent, autocomplete: "off", class: "form-control" %>
              <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
              </span>
          </div>
        </div>

    </div>
  </div>
</div>
<div class="row">
  <div class="form-group">
    <%= f.label :capacity, "Capacity", class: "col-lg-3 control-label" %>
    <div class="col-lg-5">
      <%= f.number_field :capacity, autofocus: true, min: 1, autocomplete: "off", class: "form-control", required: true %>
    </div>
  </div>
</div>
<br />
<div class="row">
  <div class="form-group">
      <%= f.submit btn_action, class: "btn btn-primary" %>
      <%= link_to 'Cancel', courses_path , class: 'btn btn-default' %>
  </div>
</div>
