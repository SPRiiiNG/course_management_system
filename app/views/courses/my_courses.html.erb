<%= render partial: "course_nav" %>
<br />
<% if current_user.instructor %>
  <div class="col-lg-1 col-sm-1 col-xs-5">
    <%= link_to 'Create course', new_course_path, class: 'btn btn-primary' %>
  </div>
  <br /> <br /> <br />
<% end %>
<table class="table table-striped table-hover ">
  <thead>
   <tr>
     <th>#</th>
     <%= render "courses/sort_header", course_fields: @course_fields, sort: @sort, link_params: {} %>
   </tr>
 </thead>
 <tbody>
    <% @courses.each_with_index do |course, index| %>
      <tr>
        <td>
          <%= index+1 %>
        </td>
        <td>
          <%= link_to course.name, course_path(course) %>
        </td>
        <td>
          <%= course.user.full_name %>
        </td>
        <td>
          <%= course.start_time.strftime("%d/%m/%Y %H:%M") %>
        </td>
        <td>
          <%= course.end_time.strftime("%d/%m/%Y %H:%M") %>
        </td>
        <td>
          <%= course.capacity %>
        </td>
      </tr>
    <% end %>
 </tbody>
</table>
